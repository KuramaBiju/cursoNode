<%- include('./partials/_header.ejs') %>

<h1>Customers</h1>

<div class="container">
    <div class="row mt-4">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th> nro </th>
                        <th> Name </th>
                        <th> Addres </th>
                        <th> Phone </th>
                        <th> Actions </th>
                    </tr>
                </thead>
                <tbody >
                    <% if(data){ %>
                    <% for(var i = 0; i < data.length; i++){  %>
                         <tr>
                         <td>
                            <%- (i + 1) %>
                         </td>
                         <td>
                            <%- data[i].name %>
                         </td>
                         <td>
                            <%- data[i].address %>
                         </td>
                         <td>
                            <%- data[i].phone %>
                         </td>

                         <td>
                           <a href="/delete/<%- data[i].id %>" class="btn btn-danger">Delete</a>
                           <a href="/update/<%- data[i].id %>" class="btn btn-info">Actualizar</a>
                         </td>
                         
                        </tr>
                        <% } %>
                   <%  } %>

                </tbody>

            </table>
        </div>
        <div class="col-md-5">
           <div class="card">
               <div class="card-body">
                <form method="post" action="/add">
                    <div class="form-group">
                        <label>Name </label>
                        <input type="text" name="name" placeholder="Name" class="form-control">
                    
                        <label>Adress </label>
                        <input type="text" name="address" placeholder="Adress" class="form-control">
                    
                        <label>Phone </label>
                        <input type="text" name="phone" placeholder="Phone" class="form-control">
                    </div>
                    <button class="btn btn-primary" type="submit">
                            Save
                    </button>
                
                </form>
               </div>

           </div>
        </div>
    </div>

</div>


<%- include('./partials/_footer.ejs') %>
